<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="170.0" prefWidth="350.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.ExitWnd">
    <stylesheets>
        <URL value="@WindowStyles.css" />
    </stylesheets>
    <VBox alignment="TOP_CENTER" prefHeight="90.0" prefWidth="350.0" AnchorPane.bottomAnchor="60.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
        <Text id="text" strokeType="OUTSIDE" strokeWidth="0.0" text="Are you sure you want to leave?" textAlignment="CENTER" wrappingWidth="300.0" AnchorPane.topAnchor="160.0">
            <VBox.margin>
                <Insets top="15.0" />
            </VBox.margin>
        </Text>
    </VBox>
    <HBox alignment="BOTTOM_CENTER" layoutY="146.0" prefHeight="0.0" prefWidth="350.0" AnchorPane.topAnchor="100.0">
        <padding>
            <Insets bottom="20.0" />
        </padding>
        <Button maxHeight="26.0" mnemonicParsing="false" onAction="#noExit" prefWidth="60.0" text="NO">
            <HBox.margin>
                <Insets bottom="10.0" left="10.0" right="100.0" top="10.0" />
            </HBox.margin>
        </Button>
        <Button mnemonicParsing="false" onAction="#yesExit" prefWidth="60.0" text="YES">
            <HBox.margin>
                <Insets bottom="10.0" top="10.0" />
            </HBox.margin>
        </Button>
    </HBox>

</AnchorPane>
